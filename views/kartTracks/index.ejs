<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 400px;"></div>   
<h1 class="d-flex justify-content-center">Go-Kart Tracks</h1>

<div class="d-flex align-items-center flex-column">
    <% for(let tracks of kartingTracks) { %>

        <div class="card mb-3" style="max-width: 40rem;">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="<%= tracks.images[0].url %>" class="img-fluid rounded-start" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= tracks.name %></h5>
                  <p class="card-text"><%= tracks.description %></p>
                  <p class="card-text"><small class="text-body-secondary"><%= tracks.location %></small></p>
                  <a class="btn btn-primary" href="/kartTracks/<%= tracks._id %>">View <%= tracks.name %></a>
                </div>
              </div>
            </div>
          </div>
    
    <% } %>
</div>



<script>
  const mapBoxToken = '<%= process.env.MAPBOX_TOKEN %>';
  const kartingTracks = '{"features": <%-JSON.stringify(kartingTracks)%>}';
  //important difference between < %= (escaped output) and < %- (unescaped output) in EJS
  //< %= converts quotes, apersands, brackets, etc to a code whereas < %- does not and embeds the contents as is
</script>

<script src="/scripts/clusterMap.js"></script>